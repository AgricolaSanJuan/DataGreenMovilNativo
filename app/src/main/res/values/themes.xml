        <item name="colorPrimary">@color/negroOficial</item>
        <item name="colorPrimaryDark">@color/verde</item>
        <item name="colorAccent">@color/gris</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/verdeClaro</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- ocultar action bar-->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
<!--        <item name="floatingActionButtonStyle">@style/fab_BotonDark</item>-->
    </style>


