<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.DataGreenMovilLight" parent="Theme.AppCompat.Light">
        <item name="android:colorBackgroundFloating">@color/main_orange_light_color</item>
        <item name="backgroundPrimary">@color/backgroundPrimaryLight</item>
        <item name="textColorMuted">@color/textColorMutedLight</item>
        <item name="backgroundFilter">@color/backgroundFilterLight</item>
        <item name="textValoresActuales">@color/blancoOficial</item>

        <!-- Personaliza el estilo por defecto del FloatingActionButton -->
        <item name="materialButtonStyle">@style/fab_style_light</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <!-- Otros atributos segÃºn tus necesidades -->
    </style>


    <style name="Theme.DataGreenMovilDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="backgroundPrimary">@color/backgroundPrimaryDark</item>
        <item name="textColorMuted">@color/textColorMutedDark</item>
        <item name="fabColor">@color/verdeOscuro</item>
        <item name="backgroundFilter"> @color/backgroundFilterDark </item>
        <item name="textValoresActuales"> @color/main_orange_light_color </item>

        <item name="android:textColor">@color/gris</item>
<!--        <item name="android:background">@color/verdeClaro</item>-->
