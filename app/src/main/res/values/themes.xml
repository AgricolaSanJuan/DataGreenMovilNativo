<resources xmlns:tools="http://schemas.android.com/tools">

<!--    <style name="Theme.DataGreenMovilLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
    <style name="Theme.DataGreenMovilLight" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>

        <!--        <item name="android:background"> @color/blancoOficial </item>-->
        <item name="textInputStyle">@style/textInputLayoutStyle</item>
        <item name="editTextStyle">@style/editTextStyle</item>
        <item name="floatingActionButtonStyle">@style/floatingActionButtonStyle</item>
        <item name="spinnerStyle">@style/spinnerStyle</item>
        <!--        <item name="cardViewStyle"> @style/CardView </item>-->
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <!--        <item name="android:background"> @color/azulOscuro </item>-->
        <!--        <item name="buttonStyle"> @style/buttonStyle </item>-->
    </style>

    <style name="Theme.DataGreenMovilLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DataGreenMovilLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DataGreenMovilLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DataGreenMovilLight.Fullscreen" parent="Theme.DataGreenMovilLight">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.DataGreenMovilLight.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.DataGreenMovil.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


</resources>