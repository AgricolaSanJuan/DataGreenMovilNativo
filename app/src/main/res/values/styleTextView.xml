<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuItemTextAppearance" >
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily"> @font/auxiliar_02 </item>
    </style>
<!--    GENERAL-->
    <style name="textViewStyle" parent="Widget.AppCompat.TextView">

    </style>

    <style name="modulosItemStyle" parent="textViewStyle">
        <item name="fontFamily"> @font/auxiliar_02 </item>
        <item name="android:layout_weight"> 9 </item>
        <item name="android:textColor"> @color/blancoOficial</item>
        <item name="android:textSize"> 30dp </item>
        <item name="android:textStyle"> bold </item>
    </style>

<!--    NAVIGATION-->
    <style name="tituloNavegacion" parent="textViewStyle">
        <item name="android:paddingTop"> @dimen/nav_header_vertical_spacing </item>
        <item name="android:fontFamily"> @font/auxiliar_02 </item>
        <item name="android:textAppearance"> @style/TextAppearance.AppCompat.Body1 </item>
        <item name="android:textColor"> @color/blancoOficial </item>
        <item name="android:textSize"> 30dp </item>
        <item name="android:textStyle"> bold </item>
    </style>

<!--    CARD VIEW-->

    <style name="textoDetallesCardView" parent="textViewStyle">
        <item name="android:fontFamily">@font/auxiliar_02</item>
        <item name="android:textColor">@color/negroOficial</item>
    </style>


    <style name="textoSecundarioDetallesCardView" parent="textViewStyle">
        <item name="android:fontFamily">@font/auxiliar_02</item>
        <item name="android:textColor">@color/grisOscuro</item>
    </style>

    <style name="textViewEdicionItems">
        <item name="android:background"> @color/float_transparent </item>
        <item name="android:textColor"> @color/blancoOficial </item>
        <item name="android:textSize"> 20dp </item>
        <item name="fontFamily"> @font/auxiliar_02 </item>
    </style>

<!--    VISTAS EDICION-->
    <style name="textoTitulo" parent="textViewStyle">
        <item name="android:fontFamily">@font/auxiliar_02</item>
        <item name="android:textColor">@color/grisOscuro</item>
        <item name="android:textStyle"> bold </item>
    </style>

    <style name="textoPrimario" parent="textViewStyle">
        <item name="android:fontFamily">@font/auxiliar_02</item>
        <item name="android:textColor">@color/grisOscuro</item>
    </style>

    <style name="textoSecundario" parent="textViewStyle">
        <item name="android:fontFamily">@font/auxiliar_02</item>
        <item name="android:textColor">@color/grisPrimario</item>
        <item name="android:textStyle"> bold </item>
    </style>
</resources>