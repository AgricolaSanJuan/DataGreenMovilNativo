<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_principal"
    tools:context=".ui.SettingsLocal.SettingsLocalFragment"
    android:id="@+id/configMain">

    <LinearLayout
        android:id="@+id/c002_lly_StatusSuperior_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/c000_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text="[" />

        <TextView
            android:id="@+id/c002_txv_PushTituloVentana_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:onClick="onClick"
            android:text="\\Configuracion" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/c002_txv_PushRed_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:onClick="onClick"
            android:text="OFFLINE" />

        <TextView
            android:id="@+id/c000_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text="]" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/c002_lly_Cuerpo_v"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/c002_lly_StatusInferior_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c002_lly_StatusSuperior_v">

        <ScrollView
            android:id="@+id/settingsScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/vmr"
                        android:text="Conexion y Registro:"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progress_bar_horizontal"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progress="0"
                        android:progressBackgroundTint="#001AFF"
                        android:progressTint="#0022FF"
                        android:progressTintMode="src_in"
                        android:visibility="invisible"
                        tools:visibility="invisible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_r_blanco"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="20px">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Host (Ip):"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Instancia:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Nombre DB:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Usuario:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Password:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Puerto:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Imei:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Mac:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="# Telefono:"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:gravity="right|center_vertical"
                                android:text="Propietario:"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/c002_etxHost_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:hint="*"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxInstancia_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:hint="*"
                                android:inputType="textPersonName"
                                android:minHeight="48dp"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxNombreBD_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:hint="*"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxUsuario_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:hint="*"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etx_Password_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:hint="*"
                                android:inputType="textPassword" />

                            <EditText
                                android:id="@+id/c002_etxPuerto_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxImei_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:enabled="false"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxMac_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:enabled="false"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:inputType="textPersonName"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxNroTelefono_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:inputType="numberDecimal"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/c002_etxPropietario_v"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:fontFamily="@font/monoespaciada_principal"
                                android:inputType="textPersonName"
                                android:textAllCaps="true"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/c002_btnProbarConexion_v"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/vmr"
                            android:onClick="abrirMenuConfiguracion"
                            android:text="Probar" />
                        <Button
                            android:id="@+id/c002_btnGenerarDB_v"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/vmr"
                            android:onClick="sincronizarBD"
                            android:text="GENERAR DB" />

<!--                        <Button-->
<!--                            android:id="@+id/c002_btnRegistrar_v"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="10dp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:fontFamily="@font/vmr"-->
<!--                            android:onClick="onClick"-->
<!--                            android:text="Registrar" />-->
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10px"
                    android:layout_marginBottom="10px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/c002_btnGuardar_v"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/vmr"
                    android:onClick="onClick"
                    android:text="Guardar" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/c002_lly_StatusInferior_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/c000_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text="[" />

        <TextView
            android:id="@+id/c002_txv_NombreApp_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text="Nombre App" />

        <TextView
            android:id="@+id/c002_txv_PushVersionApp_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:onClick="onClick"
            android:text=" v 0.0" />

        <TextView
            android:id="@+id/c000_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text=" | DB" />

        <TextView
            android:id="@+id/c002_txv_PushVersionDataBase_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:onClick="onClick"
            android:text=" v 0.0" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/c002_txv_PushIdentificador_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:onClick="onClick"
            android:text="000-USUARIO" />

        <TextView
            android:id="@+id/c000_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vmr"
            android:text="]" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>